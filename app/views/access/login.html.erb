<%= @page_title = "Admin Login" %>

<div class="login">
    <%= form_tag access_attemp_login_path do %>
        <table>
            <tr>
                <td> <%= label_tag :username %> </td>
                <td> <%= text_field_tag :username, params[:username] %> </td>
            </tr>
            <tr>
                <td> <%= label_tag :password %> </td>
                <td> <%= password_field_tag :password, params[:password] %> </td>
            </tr>
            <tr>
                <td> <%= submit_tag "Login" %>
                </td>
            </tr>
        </table>
    <% end %>
</div>